---
import { ViewTransitions } from "astro:transitions";
import VioletWidget from "../components/VioletWidget.astro";
import SettingsPanel from "../components/SettingsPanel.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Auto Memories Doll Service — A Violet Evergarden themed blog. Delivering heartfelt letters across the world.",
  image = "/images/charviolet-removebg-preview.png",
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site ?? "https://vigarden.blog",
);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL.href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&family=Lora:ital,wght@0,400..700;1,400..700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <ViewTransitions />

    <!-- FOUC Prevention & Initial Config -->
    <script is:inline>
      // Immediate execution to prevent flash
      (function () {
        const storedTheme = localStorage.getItem("theme");
        const preventTransition = document.createElement("style");
        preventTransition.innerHTML =
          "* { -webkit-transition: none !important; -moz-transition: none !important; -o-transition: none !important; -ms-transition: none !important; transition: none !important; }";
        document.head.appendChild(preventTransition);

        if (
          storedTheme === "dark" ||
          (!storedTheme &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        window.getComputedStyle(document.body); // Force reflow
        setTimeout(() => {
          document.head.removeChild(preventTransition);
        }, 0);

        const savedAccent = localStorage.getItem("vigarden-accent");
        const savedGold = localStorage.getItem("vigarden-gold");
        if (savedAccent && savedGold) {
          document.documentElement.style.setProperty("--accent", savedAccent);
          document.documentElement.style.setProperty("--gold", savedGold);
          const hexToRgb = (hex) => {
            const r = parseInt(hex.slice(1, 3), 16);
            const g = parseInt(hex.slice(3, 5), 16);
            const b = parseInt(hex.slice(5, 7), 16);
            return `${r}, ${g}, ${b}`;
          };
          document.documentElement.style.setProperty(
            "--accent-rgb",
            hexToRgb(savedAccent),
          );
          document.documentElement.style.setProperty(
            "--gold-rgb",
            hexToRgb(savedGold),
          );
        }
      })();

      // Re-apply on every View Transition swap (runs before new page paints)
      document.addEventListener("astro:after-swap", function () {
        var stored = localStorage.getItem("theme");
        if (
          stored === "dark" ||
          (!stored && window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // Re-apply saved accent colors
        var savedAccent = localStorage.getItem("vigarden-accent");
        var savedGold = localStorage.getItem("vigarden-gold");
        if (savedAccent && savedGold) {
          document.documentElement.style.setProperty("--accent", savedAccent);
          document.documentElement.style.setProperty("--gold", savedGold);
          var hexToRgb = function (hex) {
            var r = parseInt(hex.slice(1, 3), 16);
            var g = parseInt(hex.slice(3, 5), 16);
            var b = parseInt(hex.slice(5, 7), 16);
            return r + ", " + g + ", " + b;
          };
          document.documentElement.style.setProperty(
            "--accent-rgb",
            hexToRgb(savedAccent),
          );
          document.documentElement.style.setProperty(
            "--gold-rgb",
            hexToRgb(savedGold),
          );
        }
      });
    </script>
  </head>

  <body
    class="bg-paper text-ink dark:bg-dark-bg dark:text-white font-body min-h-screen relative overflow-x-hidden transition-colors duration-500"
  >
    <!-- Background Noise overlay -->
    <div
      class="fixed inset-0 pointer-events-none opacity-[0.03] dark:opacity-[0.05] z-[60] noise-bg"
    >
    </div>

    <!-- Header (Mizuki Style - Floating Pill & Tidied) -->
    <header
      id="main-header"
      class="fixed top-0 left-0 right-0 z-[100] transition-all duration-500 h-24 flex items-center justify-center px-4 sm:px-6"
    >
      <nav
        class="w-full max-w-6xl h-14 bg-white/40 dark:bg-black/40 backdrop-blur-xl border border-white/20 dark:border-white/10 rounded-full px-4 sm:px-10 flex items-center justify-between shadow-lg transition-all duration-500"
      >
        <div class="flex items-center gap-4 sm:gap-10">
          <a href="/" class="flex items-center gap-2 group">
            <span
              class="font-heading text-xl text-ink dark:text-white group-hover:text-accent transition-all duration-300 tracking-tight"
            >
              Vigarden
            </span>
          </a>

          <div class="hidden lg:flex items-center gap-8">
            <a
              href="/"
              class="text-[10px] font-bold text-ink/70 dark:text-white/70 hover:text-accent dark:hover:text-gold uppercase tracking-[0.2em] transition-all duration-300"
              data-i18n="home"
              data-jp="ホーム"
              data-id="BERANDA"
              data-en="HOME">ホーム (Home)</a
            >
            <a
              href="/blog/"
              class="text-[10px] font-bold text-ink/70 dark:text-white/70 hover:text-accent dark:hover:text-gold uppercase tracking-[0.2em] transition-all duration-300"
              data-i18n="archive"
              data-jp="アーカイブ"
              data-id="ARSIP"
              data-en="ARCHIVE">アーカイブ (Archive)</a
            >
            <a
              href="/letters/"
              class="text-[10px] font-bold text-ink/70 dark:text-white/70 hover:text-accent dark:hover:text-gold uppercase tracking-[0.2em] transition-all duration-300"
              data-i18n="letters"
              data-jp="手紙"
              data-id="SURAT"
              data-en="LETTERS">手紙 (Letters)</a
            >
          </div>
        </div>

        <div class="flex items-center gap-2 sm:gap-6">
          <SettingsPanel />
          <div class="h-6 w-[1px] bg-ink/10 dark:bg-white/10 hidden sm:block">
          </div>
          <slot name="header-right" />
        </div>
      </nav>
    </header>

    <script is:inline>
      const header = document.getElementById("main-header");
      const nav = header?.querySelector("nav");
      window.addEventListener("scroll", () => {
        if (!nav) return;
        if (window.scrollY > 40) {
          nav.classList.add(
            "bg-white/70",
            "dark:bg-black/70",
            "shadow-2xl",
            "max-w-5xl",
          );
          nav.classList.remove("max-w-6xl", "bg-white/40", "dark:bg-black/40");
        } else {
          nav.classList.remove(
            "bg-white/70",
            "dark:bg-black/70",
            "shadow-2xl",
            "max-w-5xl",
          );
          nav.classList.add("max-w-6xl", "bg-white/40", "dark:bg-black/40");
        }
      });
    </script>

    <div class="relative z-10 w-full">
      <slot />
    </div>

    <!-- Interactive Floating Violet -->
    <VioletWidget />

    <script is:inline>
      // Sync GIF in Layout to handle theme changes
      function syncBackgroundGif() {
        const gif = document.getElementById("theme-gif");
        if (gif) {
          const isDark = document.documentElement.classList.contains("dark");
          gif.src = isDark
            ? "/images/violet-dark.gif"
            : "/images/violet-light.gif";
          if (isDark) {
            gif.classList.remove("opacity-30");
            gif.classList.add("opacity-40");
          } else {
            gif.classList.remove("opacity-40");
            gif.classList.add("opacity-30");
          }
        }
      }

      syncBackgroundGif();
      document.addEventListener("astro:after-swap", syncBackgroundGif);

      // Listen for custom event from ThemeController
      window.addEventListener("theme-changed", syncBackgroundGif);

      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.attributeName === "class") {
            syncBackgroundGif();
          }
        });
      });
      observer.observe(document.documentElement, { attributes: true });
    </script>

    <style is:global>
      :root {
        --accent: #00563b;
        --gold: #c5a059;
        --accent-rgb: 0, 86, 59;
        --gold-rgb: 197, 160, 89;
      }

      .noise-bg {
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Playfair Display", serif;
        letter-spacing: -0.02em;
      }

      .font-body {
        font-family: "Courier Prime", monospace;
      }

      body {
        font-family: "Inter", sans-serif;
        line-height: 1.6;
      }

      /* Prose styling - Refined for comfort */
      .prose {
        max-width: 70ch;
        line-height: 1.8;
        font-size: 1.05rem;
      }

      /* Scrollbar - Minimal & Non-intrusive */
      ::-webkit-scrollbar {
        width: 5px;
      }
      ::-webkit-scrollbar-track {
        background: transparent;
      }
      ::-webkit-scrollbar-thumb {
        background: rgba(var(--gold-rgb), 0.2);
        border-radius: 10px;
        transition: background 0.3s;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: rgba(var(--gold-rgb), 0.5);
      }

      /* Custom Color Overrides */
      .text-accent {
        color: var(--accent);
      }
      .bg-accent {
        background-color: var(--accent);
      }
      .border-accent {
        border-color: var(--accent);
      }
      .text-gold {
        color: var(--gold);
      }
      .bg-gold {
        background-color: var(--gold);
      }
      .border-gold {
        border-color: var(--gold);
      }

      /* ── Letter Paper ────────────────────────── */
      .letter-paper {
        background-color: #f5f5dc;
        background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='paper'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.04' numOctaves='5' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23paper)' opacity='0.03'/%3E%3C/svg%3E");
        position: relative;
      }
      .dark .letter-paper {
        background-color: #1a1e2e;
        background-image: none;
      }

      /* ── Airmail Border ───────────────────────── */
      .airmail-border {
        background-image: repeating-linear-gradient(
          -45deg,
          transparent,
          transparent 8px,
          #c0392b 8px,
          #c0392b 10px,
          transparent 10px,
          transparent 18px,
          #2c3e50 18px,
          #2c3e50 20px
        );
        height: 8px;
        width: 100%;
      }
    </style>
  </body>
</html>
