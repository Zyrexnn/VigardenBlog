---
import { ViewTransitions } from "astro:transitions";
import VioletWidget from "../components/VioletWidget.astro";
import MusicPlayer from "../components/MusicPlayer.astro";
import SettingsPanel from "../components/SettingsPanel.astro";
import SearchModal from "../components/SearchModal.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Auto Memories Doll Service — A Violet Evergarden themed blog. Delivering heartfelt letters across the world.",
  image = "/images/charviolet-removebg-preview.png",
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site ?? "https://vigarden.blog",
);

const pathname = Astro.url.pathname;
const isHome = pathname === "/";
const isBlog = pathname.startsWith("/blog");
const isLetters = pathname.startsWith("/letters");
const isStories = pathname.includes("/stories/");

import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang="en" class="scroll-smooth" translate="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="google" content="notranslate" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL.href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Fonts (optimized: font-display=swap, preload critical font) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@400;500&family=Special+Elite&family=Courier+Prime:wght@400;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript
      ><link
        href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@400;500&family=Special+Elite&family=Courier+Prime:wght@400;700&display=swap"
        rel="stylesheet"
      /></noscript
    >

    <ViewTransitions />

    <!-- FOUC Prevention & Initial Config -->
    <script is:inline>
      // Immediate execution to prevent flash
      (function () {
        const storedTheme = localStorage.getItem("theme");
        const preventTransition = document.createElement("style");
        preventTransition.innerHTML =
          "* { -webkit-transition: none !important; -moz-transition: none !important; -o-transition: none !important; -ms-transition: none !important; transition: none !important; }";
        document.head.appendChild(preventTransition);

        if (
          storedTheme === "dark" ||
          (!storedTheme &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        window.getComputedStyle(document.body); // Force reflow
        setTimeout(() => {
          document.head.removeChild(preventTransition);
        }, 0);

        const savedAccent = localStorage.getItem("vigarden-accent");
        const savedGold = localStorage.getItem("vigarden-gold");
        if (savedAccent && savedGold) {
          document.documentElement.style.setProperty("--accent", savedAccent);
          document.documentElement.style.setProperty("--gold", savedGold);
          const hexToRgb = (hex) => {
            const r = parseInt(hex.slice(1, 3), 16);
            const g = parseInt(hex.slice(3, 5), 16);
            const b = parseInt(hex.slice(5, 7), 16);
            return `${r}, ${g}, ${b}`;
          };
          document.documentElement.style.setProperty(
            "--accent-rgb",
            hexToRgb(savedAccent),
          );
          document.documentElement.style.setProperty(
            "--gold-rgb",
            hexToRgb(savedGold),
          );
        }
      })();

      // Re-apply on every View Transition swap (runs before new page paints)
      document.addEventListener("astro:after-swap", function () {
        var stored = localStorage.getItem("theme");
        if (
          stored === "dark" ||
          (!stored && window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // Re-apply saved accent colors
        var savedAccent = localStorage.getItem("vigarden-accent");
        var savedGold = localStorage.getItem("vigarden-gold");
        if (savedAccent && savedGold) {
          document.documentElement.style.setProperty("--accent", savedAccent);
          document.documentElement.style.setProperty("--gold", savedGold);
          var hexToRgb = function (hex) {
            var r = parseInt(hex.slice(1, 3), 16);
            var g = parseInt(hex.slice(3, 5), 16);
            var b = parseInt(hex.slice(5, 7), 16);
            return r + ", " + g + ", " + b;
          };
          document.documentElement.style.setProperty(
            "--accent-rgb",
            hexToRgb(savedAccent),
          );
          document.documentElement.style.setProperty(
            "--gold-rgb",
            hexToRgb(savedGold),
          );
        }
      });
    </script>
  </head>

  <body
    class="bg-paper text-ink dark:bg-dark-bg dark:text-white font-body min-h-screen relative overflow-x-hidden transition-colors duration-300"
  >
    <!-- Header -->
    <header
      id="main-header"
      class="fixed top-0 left-0 right-0 z-[100] transition-all duration-500 h-20 sm:h-24 flex items-center justify-center px-3 sm:px-6"
    >
      <nav
        class="w-full max-w-6xl h-12 sm:h-14 bg-white/40 dark:bg-black/40 backdrop-blur-xl border border-white/20 dark:border-white/10 rounded-full px-3 sm:px-10 flex items-center justify-between shadow-lg transition-all duration-500"
      >
        <div class="flex items-center gap-3 sm:gap-10">
          <a href="/" class="flex items-center gap-2 group">
            <span
              class="font-heading text-lg sm:text-xl text-ink dark:text-white group-hover:text-accent transition-all duration-300 tracking-tight"
            >
              Vigarden
            </span>
          </a>

          <div class="hidden lg:flex items-center gap-8">
            <a
              href="/"
              class:list={[
                "text-[10px] font-bold uppercase tracking-[0.2em] transition-all duration-300 relative pb-1",
                isHome
                  ? "text-accent dark:text-gold after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-1 after:h-1 after:rounded-full after:bg-accent dark:after:bg-gold"
                  : "text-ink/70 dark:text-white/70 hover:text-accent dark:hover:text-gold",
              ]}
              data-i18n="home"
              data-nav-path="/">Beranda</a
            >
            <a
              href="/blog/"
              class:list={[
                "text-[10px] font-bold uppercase tracking-[0.2em] transition-all duration-300 relative pb-1",
                isBlog
                  ? "text-accent dark:text-gold after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-1 after:h-1 after:rounded-full after:bg-accent dark:after:bg-gold"
                  : "text-ink/70 dark:text-white/70 hover:text-accent dark:hover:text-gold",
              ]}
              data-i18n="archive"
              data-nav-path="/blog">Arsip</a
            >
            <a
              href="/letters/"
              class:list={[
                "text-[10px] font-bold uppercase tracking-[0.2em] transition-all duration-300 relative pb-1",
                isLetters
                  ? "text-accent dark:text-gold after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-1 after:h-1 after:rounded-full after:bg-accent dark:after:bg-gold"
                  : "text-ink/70 dark:text-white/70 hover:text-accent dark:hover:text-gold",
              ]}
              data-i18n="letters"
              data-nav-path="/letters">Surat</a
            >
            <a
              href={lang === "id"
                ? "/stories/violet-evergarden"
                : `/${lang}/stories/violet-evergarden`}
              class:list={[
                "text-[10px] font-bold uppercase tracking-[0.2em] transition-all duration-300 relative pb-1",
                isStories
                  ? "text-accent dark:text-gold after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-1 after:h-1 after:rounded-full after:bg-accent dark:after:bg-gold"
                  : "text-ink/70 dark:text-white/70 hover:text-accent dark:hover:text-gold",
              ]}
              data-i18n="nav.story"
              data-nav-path="/stories">{t("nav.story")}</a
            >
          </div>
        </div>

        <div class="flex items-center gap-1.5 sm:gap-4">
          <button
            id="search-trigger"
            class="flex items-center gap-2 h-8 sm:h-9 px-3 sm:px-4 rounded-full bg-ink/5 dark:bg-white/5 border border-ink/10 dark:border-white/10 hover:bg-ink/10 dark:hover:bg-white/10 transition-all duration-300 group focus:outline-none focus-visible:ring-0"
            title="Search (Ctrl+K)"
            aria-label="Search"
          >
            <svg
              class="w-3.5 h-3.5 text-ink/50 dark:text-white/50 group-hover:text-accent dark:group-hover:text-gold transition-colors"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
              ></path>
            </svg>
            <span
              class="text-[10px] text-ink/35 dark:text-white/25 hidden sm:inline font-mono"
              >Ctrl+K</span
            >
          </button>
          <SettingsPanel />
          <div class="h-6 w-[1px] bg-ink/10 dark:bg-white/10 hidden sm:block">
          </div>
          <slot name="header-right" />

          <!-- Mobile Menu Button -->
          <button
            id="mobile-menu-btn"
            class="lg:hidden flex items-center justify-center w-9 h-9 rounded-full bg-ink/5 dark:bg-white/5 border border-ink/10 dark:border-white/10 ml-1"
            title="Menu"
          >
            <svg
              class="w-4 h-4 text-ink/70 dark:text-white/70"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <!-- Mobile Menu Overlay -->
    <div
      id="mobile-menu"
      class="fixed inset-0 z-[200] bg-paper dark:bg-dark-bg flex flex-col items-center justify-center gap-8 transition-opacity duration-200 opacity-0 pointer-events-none"
    >
      <button
        id="mobile-menu-close"
        class="absolute top-6 right-6 w-10 h-10 rounded-full bg-ink/10 dark:bg-white/10 flex items-center justify-center"
      >
        <svg
          class="w-5 h-5 text-ink dark:text-white"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <a
        href="/"
        class:list={[
          "mobile-nav-link text-2xl font-heading transition-colors",
          isHome
            ? "text-accent dark:text-gold"
            : "text-ink dark:text-white hover:text-accent",
        ]}
        data-i18n="home"
        data-nav-path="/">Beranda</a
      >
      <a
        href="/blog/"
        class:list={[
          "mobile-nav-link text-2xl font-heading transition-colors",
          isBlog
            ? "text-accent dark:text-gold"
            : "text-ink dark:text-white hover:text-accent",
        ]}
        data-i18n="archive"
        data-nav-path="/blog">Arsip</a
      >
      <a
        href="/letters/"
        class:list={[
          "mobile-nav-link text-2xl font-heading transition-colors",
          isLetters
            ? "text-accent dark:text-gold"
            : "text-ink dark:text-white hover:text-accent",
        ]}
        data-i18n="letters"
        data-nav-path="/letters">Surat</a
      >
      <a
        href={lang === "id"
          ? "/stories/violet-evergarden"
          : `/${lang}/stories/violet-evergarden`}
        class:list={[
          "mobile-nav-link text-2xl font-heading transition-colors",
          isStories
            ? "text-accent dark:text-gold"
            : "text-ink dark:text-white hover:text-accent",
        ]}
        data-i18n="nav.story"
        data-nav-path="/stories">{t("nav.story")}</a
      >

      <div class="w-16 h-[1px] bg-gold/30 dark:bg-gold/20"></div>

      <!-- Mobile Color Picker -->
      <div class="flex items-center gap-4">
        <button
          class="color-swatch w-8 h-8 rounded-full bg-[#4facfe] hover:scale-110 transition-transform ring-2 ring-transparent hover:ring-white/30"
          data-accent="#4facfe"
          data-gold="#c5a059"></button>
        <button
          class="color-swatch w-8 h-8 rounded-full bg-[#00563B] hover:scale-110 transition-transform ring-2 ring-transparent hover:ring-white/30"
          data-accent="#00563B"
          data-gold="#C5A059"></button>
        <button
          class="color-swatch w-8 h-8 rounded-full bg-[#f6ad55] hover:scale-110 transition-transform ring-2 ring-transparent hover:ring-white/30"
          data-accent="#f6ad55"
          data-gold="#dd6b20"></button>
        <button
          class="color-swatch w-8 h-8 rounded-full bg-[#f687b3] hover:scale-110 transition-transform ring-2 ring-transparent hover:ring-white/30"
          data-accent="#f687b3"
          data-gold="#d53f8c"></button>
      </div>
    </div>

    <script>
      document.addEventListener("astro:page-load", () => {
        const menuBtn = document.getElementById("mobile-menu-btn");
        const menuClose = document.getElementById("mobile-menu-close");
        const menu = document.getElementById("mobile-menu");
        const links = menu?.querySelectorAll(".mobile-nav-link");

        const openMenu = () => {
          if (!menu) return;
          menu.classList.remove("opacity-0", "pointer-events-none");
          menu.classList.add("opacity-100", "pointer-events-auto");
          document.body.style.overflow = "hidden";
        };
        const closeMenu = () => {
          if (!menu) return;
          menu.classList.add("opacity-0", "pointer-events-none");
          menu.classList.remove("opacity-100", "pointer-events-auto");
          document.body.style.overflow = "";
        };

        if (menuBtn) menuBtn.onclick = openMenu;
        if (menuClose) menuClose.onclick = closeMenu;
        links?.forEach((link) => {
          (link as HTMLElement).onclick = closeMenu;
        });
      });
    </script>

    <script is:inline>
      const header = document.getElementById("main-header");
      const nav = header?.querySelector("nav");
      window.addEventListener("scroll", () => {
        if (!nav) return;
        if (window.scrollY > 40) {
          nav.classList.add(
            "bg-white/70",
            "dark:bg-black/70",
            "shadow-2xl",
            "max-w-5xl",
          );
          nav.classList.remove("max-w-6xl", "bg-white/40", "dark:bg-black/40");
        } else {
          nav.classList.remove(
            "bg-white/70",
            "dark:bg-black/70",
            "shadow-2xl",
            "max-w-5xl",
          );
          nav.classList.add("max-w-6xl", "bg-white/40", "dark:bg-black/40");
        }
      });
    </script>

    <div class="relative z-10 w-full">
      <slot />
    </div>

    <!-- Interactive Global Overlays -->
    <SearchModal />
    <VioletWidget />
    <MusicPlayer />

    <script is:inline>
      function syncBackgroundGif() {
        var gifs = document.querySelectorAll("#theme-gif");
        var isDark = document.documentElement.classList.contains("dark");
        gifs.forEach(function (gif) {
          gif.src = isDark
            ? "/images/violet-dark.gif"
            : "/images/violet-light.gif";
          gif.style.opacity = isDark ? "0.25" : "0.15";
        });
      }
      syncBackgroundGif();
      document.addEventListener("astro:after-swap", syncBackgroundGif);
      window.addEventListener("theme-changed", syncBackgroundGif);
    </script>

    <style is:global>
      :root {
        --accent: #00563b;
        --gold: #c5a059;
        --accent-rgb: 0, 86, 59;
        --gold-rgb: 197, 160, 89;
      }

      /* noise-bg removed for performance */

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Playfair Display", serif;
        letter-spacing: -0.02em;
      }

      .font-body {
        font-family: "Inter", system-ui, sans-serif;
      }

      body {
        font-family: "Inter", sans-serif;
        line-height: 1.6;
      }

      /* Prose styling - Refined for comfort */
      .prose {
        max-width: 70ch;
        line-height: 1.8;
        font-size: 1.05rem;
      }

      /* Scrollbar - Minimal & Non-intrusive */
      ::-webkit-scrollbar {
        width: 5px;
      }
      ::-webkit-scrollbar-track {
        background: transparent;
      }
      ::-webkit-scrollbar-thumb {
        background: rgba(var(--gold-rgb), 0.2);
        border-radius: 10px;
        transition: background 0.3s;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: rgba(var(--gold-rgb), 0.5);
      }

      /* Custom Color Overrides */
      .text-accent {
        color: var(--accent);
      }
      .bg-accent {
        background-color: var(--accent);
      }
      .border-accent {
        border-color: var(--accent);
      }
      .text-gold {
        color: var(--gold);
      }
      .bg-gold {
        background-color: var(--gold);
      }
      .border-gold {
        border-color: var(--gold);
      }

      /* ── Letter Paper ────────────────────────── */
      .letter-paper {
        background-color: #f5f5dc;
        background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='paper'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.04' numOctaves='5' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23paper)' opacity='0.03'/%3E%3C/svg%3E");
        position: relative;
      }
      .dark .letter-paper {
        background-color: #1a1e2e;
        background-image: none;
      }

      /* ── Airmail Border ───────────────────────── */
      .airmail-border {
        background-image: repeating-linear-gradient(
          -45deg,
          transparent,
          transparent 8px,
          #c0392b 8px,
          #c0392b 10px,
          transparent 10px,
          transparent 18px,
          #2c3e50 18px,
          #2c3e50 20px
        );
        height: 8px;
        width: 100%;
      }

      /* ── Letter Canvas (Write page) ─────────── */
      .letter-canvas {
        background-color: #f5f0e1;
        background-image:
          url("data:image/svg+xml,%3Csvg width='200' height='200' viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='paper'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.03' numOctaves='5' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23paper)' opacity='0.05'/%3E%3C/svg%3E"),
          repeating-linear-gradient(
            transparent,
            transparent 31px,
            rgba(139, 115, 85, 0.08) 31px,
            rgba(139, 115, 85, 0.08) 32px
          );
        font-family: "Special Elite", "Courier Prime", monospace;
        position: relative;
      }
      .dark .letter-canvas {
        background-color: #1c2030;
        background-image: repeating-linear-gradient(
          transparent,
          transparent 31px,
          rgba(197, 160, 89, 0.04) 31px,
          rgba(197, 160, 89, 0.04) 32px
        );
      }

      /* ── Petal animation overlay ────────────── */
      .petal-overlay {
        position: fixed;
        inset: 0;
        z-index: 999;
        pointer-events: none;
        overflow: hidden;
      }
      .petal {
        position: absolute;
        top: -20px;
        width: 12px;
        height: 16px;
        background: radial-gradient(ellipse at 30% 30%, #f9c2d0, #e8849a);
        border-radius: 50% 50% 50% 0;
        opacity: 0;
        animation: petal-drift linear forwards;
      }
      .dark .petal {
        background: radial-gradient(ellipse at 30% 30%, #c5a059, #8b7355);
      }
      @keyframes petal-drift {
        0% {
          transform: translateY(0) translateX(0) rotate(0deg) scale(0.8);
          opacity: 0;
        }
        10% {
          opacity: 0.9;
        }
        50% {
          transform: translateY(50vh) translateX(40px) rotate(200deg) scale(1);
          opacity: 0.7;
        }
        100% {
          transform: translateY(110vh) translateX(-30px) rotate(400deg)
            scale(0.6);
          opacity: 0;
        }
      }

      /* ── Cinematic Text Reveals ─────────────── */
      .hero-title-reveal {
        opacity: 0;
        animation: heroPopUp 1.5s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
      }
      .hero-subtitle-reveal {
        opacity: 0;
        animation: heroPopUp 1.5s cubic-bezier(0.2, 0.8, 0.2, 1) 0.5s forwards;
      }
      @keyframes heroPopUp {
        0% {
          opacity: 0;
          transform: translateY(30px) scale(0.95);
          filter: blur(10px);
        }
        100% {
          opacity: 1;
          transform: translateY(0) scale(1);
          filter: blur(0);
        }
      }

      /* ── Wax Seal Button ────────────────────── */
      .wax-seal-btn {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: radial-gradient(
          circle at 35% 35%,
          #c0392b,
          #8b0000 60%,
          #5a0000
        );
        box-shadow:
          0 4px 15px rgba(139, 0, 0, 0.4),
          inset 0 2px 4px rgba(255, 255, 255, 0.15),
          inset 0 -2px 4px rgba(0, 0, 0, 0.3);
        border: 3px solid rgba(90, 0, 0, 0.5);
        color: #f5d5c8;
        font-family: "Playfair Display", serif;
        font-weight: 700;
        font-size: 18px;
        letter-spacing: 0.1em;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }
      .wax-seal-btn::before {
        content: "";
        position: absolute;
        inset: 3px;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
      .wax-seal-btn:hover:not(:disabled) {
        transform: scale(1.08);
        box-shadow:
          0 6px 25px rgba(139, 0, 0, 0.6),
          inset 0 2px 4px rgba(255, 255, 255, 0.2),
          inset 0 -2px 4px rgba(0, 0, 0, 0.4);
      }
      .wax-seal-btn:disabled {
        opacity: 0.4;
        cursor: not-allowed;
        filter: grayscale(0.5);
      }
      .wax-seal-btn.stamped {
        animation: wax-stamp 0.6s ease-out;
      }

      /* ── Typewriter cursor ──────────────────── */
      .tw-cursor {
        display: inline-block;
        width: 2px;
        height: 1.1em;
        background: currentColor;
        margin-left: 2px;
        vertical-align: text-bottom;
        animation: typewriter-cursor 0.8s steps(1) infinite;
      }

      /* ── Letter Corner Ornaments ─────────────── */
      .letter-ornament {
        position: absolute;
        width: 48px;
        height: 48px;
        opacity: 0.12;
        pointer-events: none;
        z-index: 1;
      }
      .dark .letter-ornament {
        opacity: 0.08;
      }
      .letter-ornament.top-left {
        top: 8px;
        left: 8px;
      }
      .letter-ornament.top-right {
        top: 8px;
        right: 8px;
        transform: scaleX(-1);
      }
      .letter-ornament.bottom-left {
        bottom: 8px;
        left: 8px;
        transform: scaleY(-1);
      }
      .letter-ornament.bottom-right {
        bottom: 8px;
        right: 8px;
        transform: scale(-1);
      }

      /* ── Letter Watermark ────────────────────── */
      .letter-watermark {
        position: absolute;
        bottom: 16px;
        left: 50%;
        transform: translateX(-50%);
        font-family: "Inter", sans-serif;
        font-size: 7px;
        text-transform: uppercase;
        letter-spacing: 0.4em;
        color: rgba(139, 115, 85, 0.15);
        pointer-events: none;
        z-index: 1;
        white-space: nowrap;
      }
      .dark .letter-watermark {
        color: rgba(197, 160, 89, 0.1);
      }

      /* ── Export Theme Toggle ─────────────────── */
      .theme-toggle-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        border: 2px solid transparent;
        background: rgba(0, 0, 0, 0.02);
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: "Inter", sans-serif;
        font-size: 0.65rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: rgba(45, 45, 45, 0.6);
      }
      .dark .theme-toggle-btn {
        background: rgba(255, 255, 255, 0.03);
        color: rgba(255, 255, 255, 0.5);
      }
      .theme-toggle-btn:hover {
        border-color: rgba(197, 160, 89, 0.3);
        background: rgba(197, 160, 89, 0.05);
      }
      .theme-toggle-btn.active {
        border-color: rgba(197, 160, 89, 0.6);
        background: rgba(197, 160, 89, 0.08);
        box-shadow: 0 0 15px rgba(197, 160, 89, 0.1);
        color: rgba(45, 45, 45, 0.85);
      }
      .dark .theme-toggle-btn.active {
        color: rgba(255, 255, 255, 0.8);
      }

      /* ── Location Input Style ────────────────── */
      .location-input {
        background: transparent;
        border: none;
        border-bottom: 1px dashed rgba(139, 115, 85, 0.2);
        font-family: "Special Elite", "Courier Prime", monospace;
        font-style: italic;
        font-size: 0.75rem;
        color: rgba(45, 45, 45, 0.5);
        padding: 2px 4px;
        outline: none;
        width: 120px;
        transition: all 0.3s ease;
      }
      .location-input:focus {
        border-bottom-color: rgba(197, 160, 89, 0.5);
        color: rgba(45, 45, 45, 0.7);
      }
      .dark .location-input {
        color: rgba(255, 255, 255, 0.35);
        border-bottom-color: rgba(255, 255, 255, 0.1);
      }
      .dark .location-input:focus {
        border-bottom-color: rgba(197, 160, 89, 0.4);
        color: rgba(255, 255, 255, 0.6);
      }

      /* ── Golden shimmer on hover ─────────────── */
      @keyframes golden-shimmer {
        0% {
          background-position: -200% 0;
        }
        100% {
          background-position: 200% 0;
        }
      }
      .letter-card-shimmer::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
          90deg,
          transparent 0%,
          rgba(197, 160, 89, 0.06) 50%,
          transparent 100%
        );
        background-size: 200% 100%;
        opacity: 0;
        transition: opacity 0.5s;
        pointer-events: none;
        border-radius: inherit;
      }
      .letter-card-shimmer:hover::after {
        opacity: 1;
        animation: golden-shimmer 2s ease infinite;
      }
    </style>
